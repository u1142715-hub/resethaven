---
const {
  title = "Reset Haven",
  description = "",
} = Astro.props;

// Base URL (GitHub Pages project site safe)
const base = (import.meta.env.BASE_URL || "/").replace(/\/$/, "");
const pathname = Astro.url?.pathname ?? "/";

// Normalize pathname so active link logic works on GitHub Pages project sites
const normalizedPathname =
  base && base !== "/" && pathname.startsWith(base + "/")
    ? pathname.slice(base.length) || "/"
    : pathname;

// Active class helper
const isActive = (href) => {
  const a = normalizedPathname.endsWith("/") ? normalizedPathname : normalizedPathname + "/";
  const b = href.endsWith("/") ? href : href + "/";
  return a === b ? "nav__link nav__link--active" : "nav__link";
};

// Saatchi profile
const SAATCHI_URL = "https://www.saatchiart.com/en-au/solara-meridian-studio";
const REDBUBBLE_URL = "https://www.redbubble.com/people/SamFrederiksen/shop";
const DOWNLOADS_URL = "https://resethaven.gumroad.com/";
// Canonical URL
const SITE_ORIGIN = "https://u1142715-hub.github.io";
const canonicalPath = `${pathname.endsWith("/") ? pathname : pathname + "/"}`;
const canonical = `${SITE_ORIGIN}${canonicalPath}`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="google-site-verification" content="R7O3CfxGVvxQmoYnaKRl21mB7TsX8jjZqZ-3WdfWl2w" />
    <link rel="canonical" href={canonical} />
    <link rel="sitemap" type="application/xml" href="/resethaven/sitemap-index.xml" />
    <!-- Public asset served by Astro from /public/styles/global.css -->
    <link rel="stylesheet" href={`${base}/styles/global.css`} />
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-4FY7ZHCQ7Z"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-4FY7ZHCQ7Z');
</script>
  </head>

  <body>
    <div class="site-shell">
      <header class="site-header">
        <div class="container site-header__inner">
          <a class="site-brand" href={`${base}/`}>ResetHaven</a>

          <nav class="nav">
            <a class={isActive("/LifeResetPro/")} href={`${base}/LifeResetPro/`}>LifeResetPro</a>
            <a class={isActive("/articles/")} href={`${base}/articles/`}>Articles</a>
            <a class={isActive("/articles/")} href={`${base}/overload-reset/`}>Reset</a>
            <a class={isActive("/about/")} href={`${base}/about/`}>About</a>
            <a class="nav__cta" href={DOWNLOADS_URL} target="_blank" rel="noopener noreferrer">
              Download
            </a>
          </nav>
        </div>
      </header>

      <main class="site-main">
        <slot />
      </main>

      <footer class="site-footer">
        <div class="container site-footer__inner">
          <div class="site-footer__meta">Â© {new Date().getFullYear()} Solara Meridian Studio</div>

          <div class="site-footer__links">
            <a href={`${base}/about/`}>About</a>
            <a href={`${base}/articles/`}>Articles</a>
            <a href={`${base}/LifeResetPro/`}>LifeResetPro</a>
            <a href={`${base}/Ethics/`}>Ethics</a>
          </div>
        </div>
